{
    "name": "mdmahbubhelal/sync-env",
    "description": "A laravel package to sync env variables between different .env files.",
    "type": "library",
    "version": "1.0",
    "keywords": [
        "laravel",
        "env",
        "sync",
        "development",
        "testing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Md Mahbub Helal",
            "email": "mdhelal00@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "orchestra/testbench": "^10.8",
        "pestphp/pest": "^3.5",
        "laravel/pint": "^1.18",
        "larastan/larastan": "^3.0",
        "rector/rector": "^2.0",
        "driftingly/rector-laravel": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "pestphp/pest-plugin-laravel": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Mahbub\\SyncEnv\\": "src",
            "Database\\Factories\\Mahbub\\SyncEnv\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mahbub\\SyncEnv\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mahbub\\SyncEnv\\SyncEnvServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
        "scripts": {
        "format": "./vendor/bin/pint",
        "refactor": "./vendor/bin/rector",
        "types": "./vendor/bin/phpstan",
        "test": "docker exec -it sync-env_local ./vendor/bin/pest --bail",
        "all": [
            "@refactor",
            "@format",
            "@types",
            "@test"
        ],
        "check": [
            "./vendor/bin/pint --test",
            "./vendor/bin/rector --dry-run",
            "./vendor/bin/phpstan",
            "docker exec -it sync-env_local ./vendor/bin/pest --bail --coverage --exactly=100"
        ]
    }
}
